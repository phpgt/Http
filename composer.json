{
	"name": "phpgt/http",
	"description": "PSR-7 HTTP message implementation.",
	"license": "MIT",
	"version": "v1.3.2",

	"require": {
		"php": ">=8.3",
		"ext-dom": "*",
		"ext-curl": "*",
		"ext-fileinfo": "*",
		"phpgt/input": "^1.3",
		"phpgt/typesafegetter": "^1.3",
		"phpgt/promise": "^2.4",
		"phpgt/async": "^1.0",
		"phpgt/json": "^1.2",
		"phpgt/curl": "^3.1",
		"phpgt/propfunc": "^1.0",
		"psr/http-message": "^2.0",
		"willdurand/negotiation": "3.1.0"
	},
	"require-dev": {
		"phpstan/phpstan": "^1.12",
		"phpunit/phpunit": "10.1.*",
		"phpmd/phpmd": "^2.13",
		"squizlabs/php_codesniffer": "^3.7"
	},

	"autoload": {
